<% active ||= :none %>
<% mower ||= nil %>
<p class="menu-label">
  <%= Mower.model_name.human(count: 2) %>
</p>
<ul class="menu-list">
  <%= active_menu(mowers_path, active, :index) do %>
    <%= fa_icon('list') %>
    <%= t('.all_mowers') %>
  <% end %>
  <%= active_menu(new_mower_path, active, :new) do %>
    <%= fa_icon('plus') %>
    <%= t('.new_mower') %>
  <% end %>
  <% if mower.present? %>
    <%= active_menu(edit_mower_path(mower), active, :edit) do %>
      <%= fa_icon('wrench') %>
      <%= t('.edit_mower') %>
    <% end %>
  <% end %>
</ul>
